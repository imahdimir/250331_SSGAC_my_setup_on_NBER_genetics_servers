	if ( ${mychoice} == "openwin" ) then
		set lpath = ( /usr/openwin/bin/xview /usr/openwin/bin $lpath )
	endif
endif

set path = (. ~ $lpath ~/bin /usr/local/bin /usr/ucb /usr/bin /usr/etc)

